{
  "name": "animationviewer-rebuild",
  "version": "0.1.0",
  "private": true,
  "description": "Rebuild of AnimationViewer using Electron + TypeScript + React",
  "main": "dist/main/main.js",
  "types": "dist/main/main.d.ts",
  "scripts": {
    "dev": "concurrently \"npm:watch:*\" \"npm:electron:dev\"",
    "watch:main": "esbuild src/main/main.ts --bundle --platform=node --target=node18 --external:electron --outfile=dist/main/main.js --sourcemap --watch",
    "watch:preload": "esbuild src/preload/preload.ts --bundle --platform=node --target=node18 --external:electron --outfile=dist/preload/preload.js --sourcemap --watch",
    "watch:renderer": "vite",
    "electron:dev": "wait-on tcp:5173 && electron .",
    "build": "npm run build:prod && echo Build complete",
    "build:prod": "rimraf dist && npm run build:main && npm run build:preload && vite build",
    "build:main": "esbuild src/main/main.ts --bundle --platform=node --target=node18 --external:electron --outfile=dist/main/main.js",
    "build:preload": "esbuild src/preload/preload.ts --bundle --platform=node --target=node18 --external:electron --outfile=dist/preload/preload.js",
    "lint": "eslint \"src/**/*.ts?(x)\"",
    "typecheck": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
  "bench:analyzer": "ts-node -P tsconfig.bench.json benchmarks/analyzer-bench.ts"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^29.4.6",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^5.1.0",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
